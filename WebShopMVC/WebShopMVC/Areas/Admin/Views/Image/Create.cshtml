@model WebShop.Model.ViewModel.ImageViewModel

@{
    ViewBag.Title = "CreateImage";
}

<h2>Create image</h2>

@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MainPicture, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.CheckBox("MainPicture", false, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

     
        <h3>Select a file to upload</h3>
     
            <input type="file" name="upload" /><br>      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CreateImage" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@Html.ActionLink("Back to product ", "Create", "Product")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}