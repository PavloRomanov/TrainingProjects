@model IEnumerable<WebShop.Model.ViewModel.CompositeCategoryViewModel>

<ul class="category">
    @foreach (var category in Model)
    {
        <li class="category_li">@Html.ActionLink(category.CategoryName, "ListSubcategories", "Subcategory",new {categoryId = category.CategoryId, @class = "category_link" },null)

            <ul>
                @foreach (var subcategory in category.Subcategories)
                {
                    <li>@Html.ActionLink(subcategory.SubcategoryName, "ProductsOfSubcategory", "Product", new {id = subcategory.SubcategoryId},null)</li>
                }
            </ul>
        </li>
    }
    @*<li>@Html.ActionLink("AllProducts", "ListAllproduct", "Product")</li>*@
</ul>
