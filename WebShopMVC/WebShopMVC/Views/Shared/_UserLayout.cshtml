<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8"/>
    <link rel="stylesheet" href="../Content/StyleLayout.css" type="text/css" />
    <title>WebShop</title>
</head>
<body>
   <header id="page_header">
       <section id="logo">
           <img src="../Images/logo10.jpg" />
       </section>
       <section id="site_map">
           <nav class="site_nav">
               <a href="../../Home/About" class="link_blok">Shipping and payment</a>
               <a href="../../Home/Contact" class="link_blok">Contact information</a>
               <a href="#" class="link_blok">Guarantee</a>
               <a href="#" class="link_blok">Track order</a>
           </nav>
           <div class="search_wrap">
               <form name="search" method="get" onsubmit="alert('Sorry...  the search does not work!'); return false">
                   <input class="search_input" type="text" />
                   <input type="submit" value="Send" />
               </form>               
           </div>
       </section>
       <section id="user_section">
           <div class="greeting">
               <p class="p_blok">Hello, <span class="user_name">...</span></p>
           </div>
           <div class="cart_button">               
               <a href="../Client/Login" class="user_link_blok"><img src="../Images/login1.jpg" /></a>
               <a href="../CartItem/GetCart" class="user_link_blok"><img src="../Images/cart4.jpg" /></a>              
           </div>
       </section>       
   </header>
    
    <section id="sidebar">
        <nav class="category_nav">
            <h3>Product category</h3>
            @Html.Action("List", "Category")
            <!--<ul>
                <li class="category_list"><a href="#">Category_1 <img src="../Images/pointer.jpg" /></li>
                <li class="category_list"><a href="#">Category_2<img src="../Images/pointer.jpg" /></a></li>
                <li class="category_list"><a href="#">Category_3<img src="../Images/pointer.jpg" /></a></li>
                <li class="category_list"><a href="#">Category_4<img src="../Images/pointer.jpg" /></a></li>
                <li class="category_list"><a href="#">Category_5<img src="../Images/pointer.jpg" /></a></li>
                <li class="category_list"><a href="#">Category_6<img src="../Images/pointer.jpg" /></a></li>
            </ul>-->
        </nav>
    </section>

    <section id="posts">
        <article class="content">
            @RenderBody()
        </article>
    </section>
   
    <footer id="page_footer">
        <section class="footer_section">
            <p>&copy; 2016 - SSCo</p>
        </section>
        <section class="footer_section">
            <h4>WebShopMVC in social networks</h4>
            <ul class="icon_list">
                <li class="social_icon"><a href="#"><img src="../Images/facebook.png" /></a></li>
                <li class="social_icon"><a href="#"><img src="../Images/vcontact.png" /></a></li>
            </ul>           
        </section>        
    </footer>
</body>
</html>
