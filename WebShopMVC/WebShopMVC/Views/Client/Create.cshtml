@model WebShop.Model.ViewModel.ClientViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    
}
<br />
<h3>Registration form</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div >       
        @Html.ValidationSummary(true, "", new { @class = "danger" })
        <fieldset>
            <legend>Required information</legend>
            
            <div class="for_group_elem">
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "for_label" })                
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "for_control", onchange = "validateLogin()" } })                             
            </div>
            <div class="danger_mesage">
                @Html.ValidationMessageFor(model => model.Login, "", new { id = "span1" }) 
            </div>

            <div class="for_group_elem">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "for_label" })                
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "for_control", onchange = "validatePassword()" } })                               
            </div>
            <div class="danger_mesage">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "danger", id = "span2" }) 
            </div>

            <div class="for_group_elem">
                @Html.Label("Confirm password", htmlAttributes: new { @class = "for_label", id = "pass2" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "for_control", onchange = "comparePassword()" } })
            </div>
            <div class="danger_mesage">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "danger", id = "span3" })
            </div>

            <div class="for_group_elem">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "for_label" })                
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "for_control", onchange = "EmailChange()" } })                
            </div>
            <div class="danger_mesage">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "danger", id = "span4" })
            </div>
        </fieldset>

        <fieldset class="">
            <legend>Additional information</legend>
            <div class="for_group_elem">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "for_label"})                
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "for_control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "danger" })
               
            </div>

            <div class="for_group_elem">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "for_label" })                
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "for_control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "danger" })
               
            </div>

            <div class="for_group_elem">
                @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "for_label" })                
                @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "for_control" } })
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "danger" })
                
            </div>

            <div class="for_group_elem">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "for_label" })
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "for_control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "danger" })
                
            </div>
        </fieldset>
            <div class="for_group_elem">
                <input type="submit" value="Sign up" class="for_control" />                
            </div>
    </div>
}

