@model IEnumerable <WebShop.Model.ViewModel.ProductViewModel>

@{
    ViewBag.Title = "ListProductSubcategories";
}

<h2>List Product One Subcategory</h2>

<table class="table">
    <tr>
        <th>@Html.Label("ProductName")</th>
        <th>Price</th>
        <th>Discount</th>
        <th>Description </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.ProductName
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Discount
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Detail", "GetOneProduct", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>