@model IEnumerable <WebShop.Model.ViewModel.ProductViewModel>

@{
    ViewBag.Title = "List Product";
}
<br>
<h2>List All Product</h2>

 
  <table class="table">
    <tr>       
        <th>@Html.Label("ProductName")</th>
        <th>Price</th>
        <th>Discount</th>
        <th>Description </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @item.ProductName
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Discount
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Detail", "Detail", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>
